<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/user_name_dialog_layout2"
    android:background="@drawable/enter_name3"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/name_header"
        android:text="@string/user_name_set"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:focusable="false"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/user_name2"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/name_header"
        android:layout_alignParentEnd="true" />

    <!--<EditText-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="15dp"-->
        <!--android:textStyle="bold"-->
        <!--android:text="@string/level_select_btn"/>-->

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/level_select2"
        android:background="@color/Color_36"
        android:textSize="15dp"
        android:textStyle="bold"
        android:foregroundGravity="center"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/user_name2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/user_name2"> </Spinner>

</RelativeLayout>