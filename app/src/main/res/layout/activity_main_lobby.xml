<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lobby_img_layout"
    android:background="@drawable/final_mainlobby"
    tools:context="com.example.misha.funmatchgame.MainLobbyActivity">




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_pastel1"
            android:id="@+id/play_btn"
            android:text="@string/play_btn"
            android:textSize="15dp"
            android:textStyle="bold"
            android:foregroundGravity="top"
            android:layout_marginBottom="29dp"
            android:layout_above="@+id/score_btn"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_pastel1"
            android:id="@+id/score_btn"
            android:text="@string/Score_board"
            android:textSize="15dp"
            android:textStyle="bold"
            android:foregroundGravity="center"
            android:layout_marginBottom="94dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />




</RelativeLayout>
