<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="@drawable/minions_scores"
    >

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/score_level_selector"
        android:background="@color/Color_36"
        android:textSize="15dp"
        android:textStyle="bold"
        android:foregroundGravity="center"
        android:layout_marginTop="174dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"> </Spinner>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scoreboard"
        android:stretchColumns="*"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/score_level_selector"
        android:layout_above="@+id/back_toLobby_btn"> </TableLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_to_lobby"
        android:id="@+id/back_toLobby_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
       android:background="@color/transparent_btn"/>
</RelativeLayout>